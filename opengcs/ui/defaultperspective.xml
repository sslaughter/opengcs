<perspective>
    <name>Default Perspective</name>
    <screen>
        <name>Screen1</name>
        <icon>art/48x48/video-display-3.png</icon>
        <tooltip>Switch to screen 1</tooltip>
        <widget>
            <type>GCSWidgetMAVNetwork</type>
            <name>MAV Network</name>
            <location>left</location>
        </widget>
         <widget>
            <type>GCSWidgetMap</type>
            <name>Map</name>
            <location>center</location>
        </widget>
    </screen>
    <screen>
        <name>Screen2</name>
        <icon>art/48x48/video-display-3.png</icon>
        <tooltip>Switch to screen 2</tooltip>
        <widget>
            <type>GCSWidgetHUD</type>
            <name>Heads Up Display</name>
            <location>left</location>
        </widget>
        <widget>
            <type>GCSWidgetPlot</type>
            <name>Plot</name>
            <location>center</location>
        </widget>
        <widget>
            <type>GCSWidgetParameterList</type>
            <name>My Parameters</name>
            <location>right</location>
        </widget>
    </screen>
    <swarm>
